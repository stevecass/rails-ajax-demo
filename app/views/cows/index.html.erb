<h1>Listing cows</h1>

<table id="cow_list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cows.each do |cow| %>
    <%= render 'cow', cow: cow %>
    <% end %>
  </tbody>
</table>

<br>

<h2>Add a new cow</h2>
<%= render 'form' %>

