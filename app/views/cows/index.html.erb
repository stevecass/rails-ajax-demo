<h1>Listing cows</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cows.each do |cow| %>
      <tr>
        <td><%= cow.name %></td>
        <td><%= cow.age %></td>
        <td><%= cow.breed %></td>
        <td><%= link_to 'Show', cow %></td>
        <td><%= link_to 'Age', age_cow_path(cow), method: :post, remote: true %></td>
        <td><%= button_to 'Destroy', cow, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cow', new_cow_path %>
